FROM ubuntu:18.04
RUN apt update && apt install -y vim dnsutils iputils-ping iproute2 nmap tcpdump traceroute less python3 python3-pip
RUN apt clean
RUN rm -rf /var/lib/apt/lists/*

WORKDIR /home/exp
COPY ./range-map.json /home/exp
COPY ./requirements-resolver.txt /home/exp
COPY ./entorypoint-resolver.sh /home/exp
COPY ./full-resolver.py /home/exp
ENTRYPOINT ["/entrypoint-resolver.sh"]
